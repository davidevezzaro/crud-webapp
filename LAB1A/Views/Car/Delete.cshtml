@model Car

@{
	ViewData["Title"] = "Delete";
}

<form method="post" asp-action="DeletePOST">
	<input asp-for="SerialNumber" hidden />
	<div class="border pb-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete</h2>
			<hr/>
		</div>
		<div class="mb-3">
			<input asp-for="SerialNumber" hidden />
			<label asp-for="SerialNumber">Serial Number</label>
			<input asp-for="SerialNumber" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Brand">Brand</label>
			<input asp-for="Brand" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Model">Model</label>
			<input asp-for="Model" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Motor">Motor</label>
			<input asp-for="Motor" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="RegistrationDate">Car registration date</label>
			<input asp-for="RegistrationDate" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Seats">Number of Seats</label>
			<input asp-for="Seats" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="PhoneNumberOwner">Phone number of the owner</label>
			<input asp-for="PhoneNumberOwner" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="EmailAddressOwner">Email address of the owner</label>
			<input asp-for="EmailAddressOwner" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Price">Price in EUR</label>
			<input asp-for="Price" class="form-control" />
		</div>
		<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
		<a asp-controller="Car" asp-action="Index" class="btn btn-secondary">Back to the list</a>
		</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial"/>
	}
}
