@{
    ViewData["Title"] = "Home";
}

<div class="container-fluid vw-60 vh-100">
    <h1 class="text-center m-5">CAR Market</h1>
    <h5 class="text-center ">The right place to buy or sell a car</h5>
    <div class="row align-items-center" style="min-height: 80vh">
        <div class="col-md-12">
            
            <br/>
            <div class="row">
                <div class="col-6">
                    <div class="card bg-secondary mb-3" style="max-width: 20rem;">
                        <div class="card-body">
                            <h4 class="card-title text-center">Buy</h4>
                            <p class="card-text text-center">On this site you will be able to find a wide selection of used cars!</p>
                            <div class="text-center">
                                <a class="btn btn-primary" asp-controller="Car" asp-action="Index">Buy</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="card bg-secondary mb-3 ms-auto" style="max-width: 20rem;">
                        <div class="card-body">
                            <h4 class="card-title text-center">Sell</h4>
                            <p class="card-text text-center">Selling your car is now easier with Car Market!</p>
                            <div class="text-center"><a class="btn btn-primary text-center" asp-controller="Car" asp-action="Create">Sell</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>