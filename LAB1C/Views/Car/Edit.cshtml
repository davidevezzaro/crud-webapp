@model Car

@{
	ViewData["Title"] = "Edit";
}

<form method="post"  asp-action="Edit">
	<div class="border pb-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit an existing car</h2>
			<hr/>
		</div>
		<div class="mb-3">
			<input asp-for="SerialNumber" hidden />
			<label asp-for="SerialNumber">Serial Number</label>
			<input asp-for="SerialNumber" disabled class="form-control"/>
			<span asp-validation-for="SerialNumber" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Brand">Brand</label>
			<input asp-for="Brand" class="form-control" />
			<span asp-validation-for="Brand" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Model">Model</label>
			<input asp-for="Model" class="form-control" />
			<span asp-validation-for="Model" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Motor">Motor</label>
			<input asp-for="Motor" class="form-control" />
			<span asp-validation-for="Motor" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="RegistrationDate">Car registration date</label>
			<input asp-for="RegistrationDate" class="form-control" />
			<span asp-validation-for="RegistrationDate" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Seats">Number of Seats</label>
			<input asp-for="Seats" class="form-control" />
			<span asp-validation-for="Seats" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="PhoneNumberOwner">Phone number of the owner</label>
			<input asp-for="PhoneNumberOwner" class="form-control" />
			<span asp-validation-for="PhoneNumberOwner" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="EmailAddressOwner">Email address of the owner</label>
			<input asp-for="EmailAddressOwner" class="form-control" />
			<span asp-validation-for="EmailAddressOwner" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Price">Price in EUR</label>
			<input asp-for="Price" class="form-control" />
			<span asp-validation-for="Price" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-success" style="width:150px">Update</button>
		<a asp-controller="Car" asp-action="Index" class="btn btn-secondary">Back to list</a>
		</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial"/>
	}
}
